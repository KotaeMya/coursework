<Window x:Class="courseworkWPF.NotifyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:courseworkWPF"
        mc:Ignorable="d"
        Title="NotifyWindow" Height="100" Width="400"
        WindowStyle="None" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown"> <!--WindowStyle="None" ResizeMode="NoResize"-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Column="0" Orientation="Vertical">
            <TextBlock FontSize="16" TextWrapping="Wrap" Text="{Binding Message}" Margin="10 10 10 10"/>
        </WrapPanel>
    </Grid>
</Window>
